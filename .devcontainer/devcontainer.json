{
  "name": "NyayAI-Dev-Env",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/NyayAI",

  "remoteUser": "root",
  "updateRemoteUserUID": false,
  "overrideCommand": false,

  "runArgs": ["--gpus=all"],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
